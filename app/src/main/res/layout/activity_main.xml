                                app:srcCompat="@drawable/ic_arrow_drop_down_white_24dp" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imageViewSeta4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
